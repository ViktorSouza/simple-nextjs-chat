generator client {
  provider = "prisma-client-js"
}

model User {
  username           String
  email              String    @unique
  password           String
  isTyping           Boolean   @default(false)
  lastTypingActivity DateTime  @default(now())
  createdAt          DateTime  @default(now())
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  messages           Message[]
}

