model Message {
  message   String
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
